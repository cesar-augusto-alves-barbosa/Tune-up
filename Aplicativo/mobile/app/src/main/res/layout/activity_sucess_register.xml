<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SucessRegisterActivity"

    android:background="@color/black">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/logo_ems_registerSucess"
            android:layout_width="250dp"
            android:layout_height="120dp"

            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:src="@drawable/icon_ems_white" >
        </ImageView>

        <ImageView
            android:id="@+id/ok_ems_registerSucess"
            android:layout_width="119dp"
            android:layout_height="119dp"

            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_baseline_check_circle_24" >
        </ImageView>

        <TextView
            android:id="@+id/text_registerSucess"
            android:layout_below="@+id/ok_ems_registerSucess"
            android:layout_width="300dp"
            android:layout_height="90dp"
            android:layout_centerHorizontal="true"

            android:text="Cadastro realizado com sucesso!"
            android:fontFamily="@font/poppins_regular"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:textSize="30sp" >
        </TextView>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>