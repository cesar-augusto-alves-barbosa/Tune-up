<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="#F6F6F6"
    tools:context=".RegisterElectricalElectronicsServiceActivity">

    <RelativeLayout
        android:id="@+id/rl_screen_register_eletricalEletronics_service"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <View
            android:id="@+id/vw_band_black"
            android:layout_width="125dp"
            android:layout_height="182.14dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:background="@drawable/band_layout"
            android:backgroundTint="@color/black" />

        <View
            android:id="@+id/vw_band_blue"
            android:layout_width="65dp"
            android:layout_height="96.14dp"
            android:background="@drawable/band_layout"
            android:backgroundTint="@color/blue"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            tools:ignore="MissingConstraints" />

        <ImageView
            android:id="@+id/img_icon_ems"
            android:layout_width="350dp"
            android:layout_height="120dp"
            android:src="@drawable/icon_ems_black"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp" />

        <TextView
            android:id="@+id/tv_title_register_eletricalEletronics_services"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="Serviço de Elétrica e Eletrônica"
            android:textSize="30sp"
            android:textAlignment="center"
            android:textColor="#000"
            android:fontFamily="@font/poppins_regular"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/img_icon_ems"
            android:layout_marginTop="20dp" />

        <LinearLayout
            android:id="@+id/box_register_eletricalEletronics_services"
            android:layout_width="350dp"
            android:layout_height="350dp"
            android:layout_below="@+id/tv_title_register_eletricalEletronics_services"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:background="@drawable/border_box"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:layout_width="180dp"
                    android:layout_height="260dp"
                    android:layout_alignParentStart="true">

                    <CheckBox
                        android:id="@+id/cb_eletricalEletronicsService_multimedia_exchange"

                        android:layout_width="175dp"
                        android:layout_height="30dp"

                        android:text="Troca de Multimídia"
                        android:textSize="15dp" />

                    <CheckBox
                        android:id="@+id/cb_eletricalEletronicsService_sound_installation"
                        android:layout_below="@id/cb_eletricalEletronicsService_multimedia_exchange"

                        android:layout_width="180dp"
                        android:layout_height="30dp"

                        android:text="Instalação de Som"
                        android:textSize="15dp" />

                    <CheckBox
                        android:id="@+id/cb_eletricalEletronicsService_electric_windows"
                        android:layout_below="@id/cb_eletricalEletronicsService_sound_installation"

                        android:layout_width="180dp"
                        android:layout_height="30dp"

                        android:text="Vidros Elétricos"
                        android:textSize="15dp" />

                    <CheckBox
                        android:id="@+id/cb_eletricalEletronicsService_led_application"
                        android:layout_below="@id/cb_eletricalEletronicsService_electric_windows"

                        android:layout_width="180dp"
                        android:layout_height="30dp"

                        android:text="Aplicação de LED"
                        android:textSize="15dp" />

                    <CheckBox
                        android:id="@+id/cb_eletricalEletronicsService_panel_customization"
                        android:layout_below="@id/cb_eletricalEletronicsService_led_application"

                        android:layout_width="180dp"
                        android:layout_height="37dp"

                        android:text="Personalização de Painel"
                        android:textSize="15dp" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="140dp"
                    android:layout_height="260dp"
                    android:layout_alignParentEnd="true">

                    <CheckBox
                        android:id="@+id/cb_eletricalEletronicsService_alarm"

                        android:layout_width="180dp"
                        android:layout_height="30dp"

                        android:text="Alarmes"
                        android:textSize="15dp" />

                    <CheckBox
                        android:id="@+id/cb_eletricalEletronicsService_locks"
                        android:layout_below="@id/cb_eletricalEletronicsService_alarm"

                        android:layout_width="180dp"
                        android:layout_height="30dp"

                        android:text="Travas"
                        android:textSize="15dp" />

                    <CheckBox
                        android:id="@+id/cb_eletricalEletronicsService_air_bag"
                        android:layout_below="@id/cb_eletricalEletronicsService_locks"

                        android:layout_width="180dp"
                        android:layout_height="30dp"

                        android:text="Air Bag"
                        android:textSize="15dp" />

                    <CheckBox
                        android:id="@+id/cb_eletricalEletronicsService_module_repair"
                        android:layout_below="@id/cb_eletricalEletronicsService_air_bag"

                        android:layout_width="180dp"
                        android:layout_height="30dp"

                        android:text="Freios ABS"
                        android:textSize="15dp" />

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="10dp"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentBottom="true">

                    <View
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_marginHorizontal="3dp"
                        android:background="@drawable/circle_activity_register_screens"
                        android:backgroundTint="@color/black" />

                    <View
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_marginHorizontal="3dp"
                        android:background="@drawable/circle_activity_register_screens"
                        android:backgroundTint="@color/black" />

                    <View
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_marginHorizontal="3dp"
                        android:background="@drawable/circle_activity_register_screens"
                        android:backgroundTint="@color/black" />

                    <View
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_marginHorizontal="3dp"
                        android:background="@drawable/circle_activity_register_screens"
                        android:backgroundTint="@color/black" />

                    <View
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_marginHorizontal="3dp"
                        android:background="@drawable/circle_activity_register_screens"
                        android:backgroundTint="@color/black" />

                    <View
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_marginHorizontal="3dp"
                        android:background="@drawable/circle_activity_register_screens"
                        android:backgroundTint="@color/black" />

                    <View
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_marginHorizontal="3dp"
                        android:background="@drawable/circle_activity_register_screens"
                        android:backgroundTint="@color/blue" />

                    <View
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_marginHorizontal="3dp"
                        android:background="@drawable/circle_activity_register_screens"
                        android:backgroundTint="@color/black" />

                    <View
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_marginHorizontal="3dp"
                        android:background="@drawable/circle_activity_register_screens"
                        android:backgroundTint="@color/black" />

                </LinearLayout>

            </RelativeLayout>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="300dp"
            android:layout_height="80dp"
            android:layout_centerInParent="true"
            android:layout_below="@+id/box_register_eletricalEletronics_services">

            <Button
                android:id="@+id/bt_back_register_info_brake"
                android:layout_width="120dp"
                android:layout_height="60dp"
                android:layout_alignParentLeft="true"
                android:fontFamily="@font/poppins_medium"
                android:backgroundTint="@color/black"
                android:text="@string/txt_back_button"
                android:onClick="redirectToRegisterBeautyPreparation"
                android:textColor="@color/white"
                android:layout_centerVertical="true"/>

            <Button
                android:id="@+id/bt_next_register_info_brake"
                android:layout_width="120dp"
                android:layout_height="60dp"
                android:layout_alignParentEnd="true"
                android:backgroundTint="@color/blue"
                android:fontFamily="@font/poppins_medium"
                android:text="@string/txt_next_button"
                android:textColor="@color/white"
                android:layout_centerVertical="true"/>

        </RelativeLayout>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>