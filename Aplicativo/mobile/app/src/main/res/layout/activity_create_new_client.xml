<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreateNewClientActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <View
                android:id="@+id/vw_band_black"
                android:layout_width="125dp"
                android:layout_height="182.14dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:background="@drawable/band_layout"
                android:backgroundTint="@color/black" />

            <View
                android:id="@+id/vw_band_blue"
                android:layout_width="65dp"
                android:layout_height="96.14dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:background="@drawable/band_layout"
                android:backgroundTint="@color/blue"
                tools:ignore="MissingConstraints" />

            <ImageView
                android:id="@+id/iv_set"
                android:layout_width="55dp"
                android:layout_height="80dp"
                android:layout_alignStart="@+id/rl_box_1"
                android:src="@mipmap/set" />

            <RelativeLayout
                android:id="@+id/rl_box_1"
                android:layout_width="345dp"
                android:layout_height="320dp"
                android:layout_below="@+id/iv_set"
                android:layout_centerHorizontal="true"
                android:background="@drawable/border_box_blue">

                <TextView
                    android:id="@+id/tv_view_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_bold"
                    android:text="@string/tl_data_client"
                    android:textColor="#000"
                    android:textSize="20sp" />

                <RelativeLayout
                    android:id="@+id/rl_et_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_view_title">

                    <TextView
                        android:id="@+id/tv_view_name"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:fontFamily="@font/poppins_bold"
                        android:text="@string/tl_name_orderservice"
                        android:textColor="#000"
                        android:textSize="15sp" />

                    <EditText
                        android:id="@+id/et_view_name"
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:layout_below="@+id/tv_view_name"
                        android:background="@drawable/input_backgrond"
                        android:textColor="#000"
                        android:textSize="15sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_et_cpf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_below="@+id/rl_et_name"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:id="@+id/tv_view_cpf"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:fontFamily="@font/poppins_bold"
                        android:text="@string/tl_cpf"
                        android:textColor="#000"
                        android:textSize="15sp" />

                    <EditText
                        android:id="@+id/et_view_cpf"
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:layout_below="@+id/tv_view_cpf"
                        android:background="@drawable/input_backgrond"
                        android:textColor="#000"
                        android:textSize="15sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_et_dateBirth"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_below="@+id/rl_et_cpf"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:id="@+id/tv_view_dateBirth"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:fontFamily="@font/poppins_bold"
                        android:text="@string/tl_date_birth"
                        android:textColor="#000"
                        android:textSize="15sp" />

                    <EditText
                        android:id="@+id/et_view_dateBirth"
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:layout_below="@+id/tv_view_dateBirth"
                        android:background="@drawable/input_backgrond"
                        android:textColor="#000"
                        android:textSize="15sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_et_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_below="@+id/rl_et_dateBirth"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:id="@+id/tv_view_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:fontFamily="@font/poppins_bold"
                        android:text="@string/tl_phone"
                        android:textColor="#000"
                        android:textSize="15sp" />

                    <EditText
                        android:id="@+id/et_view_phone"
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:layout_below="@+id/tv_view_phone"
                        android:background="@drawable/input_backgrond"
                        android:textColor="#000"
                        android:textSize="15sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_et_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_below="@+id/rl_et_phone"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:id="@+id/tv_view_email"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:fontFamily="@font/poppins_bold"
                        android:text="@string/ph_email"
                        android:textColor="#000"
                        android:textSize="15sp" />

                    <EditText
                        android:id="@+id/et_view_email"
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:layout_below="@+id/tv_view_email"
                        android:background="@drawable/input_backgrond"
                        android:textColor="#000"
                        android:textSize="15sp" />
                </RelativeLayout>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_box_2"
                android:layout_width="345dp"
                android:layout_height="390dp"
                android:layout_below="@+id/rl_box_1"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:background="@drawable/border_box_blue">

                <RelativeLayout
                    android:id="@+id/rl_et_board"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_marginTop="10dp">

                    <TextView
                        android:id="@+id/tv_view_board"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_bold"
                        android:text="@string/tl_placa_menu"
                        android:textColor="#000"
                        android:textSize="15sp" />

                    <EditText
                        android:id="@+id/et_view_board"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_view_board"
                        android:background="@drawable/input_backgrond"
                        android:textColor="#000"
                        android:textSize="15sp" />
                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/rl_et_model"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/rl_et_board"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:id="@+id/tv_view_model"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_bold"
                        android:text="@string/tl_model_car"
                        android:textColor="#000"
                        android:textSize="15sp" />

                    <EditText
                        android:id="@+id/et_view_model"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_view_model"
                        android:background="@drawable/input_backgrond"
                        android:textColor="#000"
                        android:textSize="15sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_et_year"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/rl_et_model"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:id="@+id/tv_view_year"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_bold"
                        android:text="Ano:"
                        android:textColor="#000"
                        android:textSize="15sp" />

                    <EditText
                        android:id="@+id/et_view_year"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_view_year"
                        android:background="@drawable/input_backgrond"
                        android:textColor="#000"
                        android:textSize="15sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_et_brand"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/rl_et_year"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:id="@+id/tv_view_brand"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_bold"
                        android:text="Marca"
                        android:textColor="#000"
                        android:textSize="15sp" />

                    <EditText
                        android:id="@+id/et_view_brand"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_view_brand"
                        android:background="@drawable/input_backgrond"
                        android:textColor="#000"
                        android:textSize="15sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_et_color"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/rl_et_brand"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:id="@+id/tv_view_color"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_bold"
                        android:text="Cor:"
                        android:textColor="#000"
                        android:textSize="15sp" />

                    <EditText
                        android:id="@+id/et_view_color"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_view_color"
                        android:background="@drawable/input_backgrond"
                        android:textColor="#000"
                        android:textSize="15sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_et_category"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/rl_et_color"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:id="@+id/tv_view_category"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_bold"
                        android:text="Categoria:"
                        android:textColor="#000"
                        android:textSize="15sp" />

                    <EditText
                        android:id="@+id/et_view_category"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_view_category"
                        android:background="@drawable/input_backgrond"
                        android:textColor="#000"
                        android:textSize="15sp" />
                </RelativeLayout>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="320dp"
                android:layout_height="80dp"
                android:layout_below="@+id/rl_box_2"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp">

                <Button
                    android:id="@+id/bt_not_save_info_client"
                    android:layout_width="150dp"
                    android:layout_height="60dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:backgroundTint="@color/black"
                    android:fontFamily="@font/poppins_medium"
                    android:text="Cancelar"
                    android:textColor="@color/white" />

                <Button
                    android:id="@+id/bt_save_edit_info_client"
                    android:layout_width="150dp"
                    android:layout_height="60dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:backgroundTint="@color/blue"
                    android:fontFamily="@font/poppins_medium"
                    android:text="Salvar Edição"
                    android:onClick="showPopUpNewClient"
                    android:textColor="@color/white"
                    android:textSize="13dp" />

            </RelativeLayout>

        </RelativeLayout>

    </ScrollView>

    <RelativeLayout
        android:id="@+id/rl_container_popup_client_detail_edit"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#E000"
        android:visibility="gone">

        <TextView
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginVertical="280dp"
            android:text="Deseja salvar as alterações?"

            android:textColor="@color/white"
            android:fontFamily="@font/poppins_bold"
            android:textAlignment="center"
            android:textSize="23sp">
        </TextView>

        <RelativeLayout
            android:id="@+id/rl_box_buttons"
            android:layout_width="300dp"
            android:layout_height="80dp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true">

            <Button
                android:id="@+id/bt_not_accept"
                android:layout_width="120dp"
                android:layout_height="60dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:backgroundTint="@color/blue"

                android:textSize="18sp"
                android:fontFamily="@font/poppins_medium"
                android:onClick="gonePopUpNewClient"
                android:text="Não"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/bt_yes_accept"
                android:layout_width="120dp"
                android:layout_height="60dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:backgroundTint="@color/blue"

                android:textSize="18sp"
                android:fontFamily="@font/poppins_medium"
                android:text="Sim"
                android:textColor="@color/white" />

        </RelativeLayout>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>