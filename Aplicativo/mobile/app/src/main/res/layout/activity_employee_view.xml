<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EmployeeViewActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:id="@+id/vw_band_black"
            android:layout_width="125dp"
            android:layout_height="182.14dp"
            android:rotationY="540"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:background="@drawable/band_layout"
            android:backgroundTint="@color/black" />

        <View
            android:id="@+id/vw_band_blue"
            android:layout_width="65dp"
            android:layout_height="96.14dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:background="@drawable/band_layout"
            android:backgroundTint="@color/blue"
            android:rotationY="540"
            tools:ignore="MissingConstraints" />

        <LinearLayout
            android:layout_width="450dp"
            android:layout_height="60dp"
            android:background="#0976DA"
            android:orientation="horizontal"
            android:id="@+id/ll_top_bar"/>

        <TextView
            android:id="@+id/tv_title_employee_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="100dp"
            android:fontFamily="@font/poppins_regular"
            android:text="Funcionários"
            android:textColor="@color/black"
            android:textSize="30dp" />

        <LinearLayout
            android:id="@+id/ll_container_employee"
            android:layout_width="135dp"
            android:layout_height="100dp"
            android:layout_below="@+id/tv_title_employee_view"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="25dp"
            android:background="#222222"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_name_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/poppins_regular"
                android:text="César Cândido"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/tv_acess_level"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/poppins_regular"
                android:text="Nível de Acesso:"
                android:textColor="#FFFFFF"
                android:textSize="10dp" />

            <TextView
                android:id="@+id/tv_employee"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:fontFamily="@font/poppins_regular"
                android:text="Gerente"
                android:textColor="#FFFFFF"
                android:textSize="10dp" />

            <TextView
                android:id="@+id/tv_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:fontFamily="@font/poppins_regular"
                android:text="(11)99999-9999"
                android:textColor="#FFFFFF"
                android:textSize="10dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_container_employee_two"
            android:layout_width="135dp"
            android:layout_height="100dp"
            android:layout_below="@+id/ll_container_employee"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="50dp"
            android:background="#222222"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_name_user_two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/poppins_regular"
                android:text="Luisa Helenna"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/tv_acess_level_two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/poppins_regular"
                android:text="Nível de Acesso:"
                android:textColor="#FFFFFF"
                android:textSize="10dp" />

            <TextView
                android:id="@+id/tv_employee_two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:fontFamily="@font/poppins_regular"
                android:text="Mecânico"
                android:textColor="#FFFFFF"
                android:textSize="10dp" />

            <TextView
                android:id="@+id/tv_phone_two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="6dp"
                android:fontFamily="@font/poppins_regular"
                android:text="(11)99999-9999"
                android:textColor="#FFFFFF"
                android:textSize="10dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_container_employee_three"
            android:layout_width="135dp"
            android:layout_height="100dp"
            android:layout_below="@+id/ll_container_employee_two"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="50dp"
            android:background="#222222"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_name_user_three"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/poppins_regular"
                android:text="Lucas Silva"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/tv_acess_level_three"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/poppins_regular"
                android:text="Nível de Acesso:"
                android:textColor="#FFFFFF"
                android:textSize="10dp" />

            <TextView
                android:id="@+id/tv_employee_three"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:fontFamily="@font/poppins_regular"
                android:text="Mecânco"
                android:textColor="#FFFFFF"
                android:textSize="10dp" />

            <TextView
                android:id="@+id/tv_phone_three"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="6dp"
                android:fontFamily="@font/poppins_regular"
                android:text="(11)99999-9999"
                android:textColor="#FFFFFF"
                android:textSize="10dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_container_employee_four"
            android:layout_width="135dp"
            android:layout_height="100dp"
            android:layout_below="@+id/tv_title_employee_view"
            android:layout_marginLeft="235dp"
            android:layout_marginTop="25dp"
            android:background="#222222"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_name_user_four"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/poppins_regular"
                android:text="Lucas Silva"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/tv_acess_level_four"
                android:layout_width="wrap_content"
