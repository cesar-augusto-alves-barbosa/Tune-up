                android:fontFamily="@font/poppins_regular"
                android:text="(11)99999-9999"
                android:textColor="#FFFFFF"
                android:textSize="10dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_container_employee_five"
            android:layout_width="135dp"
            android:layout_height="100dp"
            android:layout_below="@+id/ll_container_employee_four"
            android:layout_marginLeft="235dp"
            android:layout_marginTop="50dp"
            android:background="#222222"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_name_user_five"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/poppins_regular"
                android:text="Maria Carmo"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/tv_acess_level_five"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/poppins_regular"
                android:text="Nível de Acesso:"
                android:textColor="#FFFFFF"
                android:textSize="10dp" />

            <TextView
                android:id="@+id/tv_employee_five"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
