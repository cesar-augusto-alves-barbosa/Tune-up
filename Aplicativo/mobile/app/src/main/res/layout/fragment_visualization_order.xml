                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/et_write_model"
                            android:layout_width="356dp"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/tv_view_model"

                            android:text="Charger R/T 69"
                            android:fontFamily="@font/poppins_medium"
                            android:textColor="@color/black"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/tv_view_category"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/et_write_model"
                            android:layout_marginTop="15dp"

                            android:fontFamily="@font/poppins_bold"
                            android:text="Categoria:"
                            android:textColor="@color/black"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/et_write_category"
                            android:layout_width="356dp"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/tv_view_category"

                            android:fontFamily="@font/poppins_medium"
                            android:text="Muscle Car"
                            android:textColor="@color/black"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/tv_view_color"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/et_write_category"
                            android:layout_marginTop="15dp"

                            android:fontFamily="@font/poppins_bold"
                            android:text="Cor:"
                            android:textColor="@color/black"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/et_write_color"
                            android:layout_width="356dp"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/tv_view_color"

                            android:text="Preto Perolado"
                            android:fontFamily="@font/poppins_medium"
                            android:textColor="@color/black"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/tv_view_board"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/et_write_color"
                            android:layout_marginTop="15dp"

                            android:fontFamily="@font/poppins_bold"
                            android:text="Placa:"
                            android:textColor="@color/black"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/et_write_board"
                            android:layout_width="356dp"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/tv_view_board"

                            android:text="REI-6987"
                            android:fontFamily="@font/poppins_medium"
                            android:textColor="@color/black"
                            android:textSize="18sp" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rl_box_view_photos_car"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/rl_box_view_car"
                        android:layout_marginTop="15dp"

                        android:layout_marginBottom="30dp"
                        android:background="@drawable/border_box_blue">

                        <TextView
                            android:id="@+id/tv_view_info_photos_car"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:fontFamily="@font/poppins_bold"
                            android:text="IMAGENS DO VEÍCULO"
                            android:textColor="@color/black"

                            android:textSize="17dp" />

                        <ImageView
                            android:id="@+id/iv_photo_1"
                            android:layout_width="140dp"
                            android:layout_height="120dp"
                            android:layout_below="@+id/tv_view_info_photos_car"
                            android:layout_alignStart="@+id/tv_view_info_photos_car"
                            android:layout_marginTop="15dp"
                            android:background="@drawable/border_box"

                            android:onClick="addingImage1" />

                        <View
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_alignStart="@+id/iv_photo_1"
                            android:layout_alignTop="@+id/iv_photo_1"
                            android:layout_alignEnd="@+id/iv_photo_1"
                            android:layout_alignBottom="@+id/iv_photo_1"
                            android:background="@drawable/ic_baseline_photo_camera_24" />

                        <ImageView
                            android:id="@+id/iv_photo_2"
                            android:layout_width="140dp"
                            android:layout_height="120dp"
                            android:layout_below="@+id/tv_view_info_photos_car"
                            android:layout_alignParentEnd="true"
                            android:layout_marginTop="15dp"
                            android:background="@drawable/border_box"

                            android:onClick="addingImage2" />

                        <View
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_alignStart="@+id/iv_photo_2"
                            android:layout_alignTop="@+id/iv_photo_2"
                            android:layout_alignEnd="@+id/iv_photo_2"
                            android:layout_alignBottom="@+id/iv_photo_2"
                            android:background="@drawable/ic_baseline_photo_camera_24" />

                        <ImageView
                            android:id="@+id/iv_photo_3"
                            android:layout_width="140dp"
                            android:layout_height="120dp"
                            android:layout_below="@+id/iv_photo_1"
                            android:layout_marginTop="15dp"
                            android:background="@drawable/border_box"

                            android:onClick="addingImage3" />

                        <View
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_alignStart="@+id/iv_photo_3"
                            android:layout_alignTop="@+id/iv_photo_3"
                            android:layout_alignEnd="@+id/iv_photo_3"
                            android:layout_alignBottom="@+id/iv_photo_3"
                            android:background="@drawable/ic_baseline_photo_camera_24" />

                        <ImageView
                            android:id="@+id/iv_photo_4"
                            android:layout_width="140dp"
                            android:layout_height="120dp"
                            android:layout_below="@+id/iv_photo_2"
                            android:layout_alignParentEnd="true"
                            android:layout_marginTop="15dp"
                            android:background="@drawable/border_box"

                            android:onClick="addingImage4" />

                        <View
                            android:layout_width="50dp"
