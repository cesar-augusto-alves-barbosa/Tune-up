<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UpdateInfoOwnerActivity"
    android:background="#F6F6F6">

    <RelativeLayout
        android:id="@+id/rl_head_profile"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@color/black"

        android:padding="8dp">

        <View
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"

            android:onClick="backHomeProfile"

            android:background="@drawable/ic_baseline_keyboard_arrow_left_24" />

        <TextView
            android:id="@+id/tv_profile_user"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_centerHorizontal="true"
            android:layout_marginStart="12dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="12dp"
            android:layout_marginBottom="12dp"
            android:fontFamily="@font/poppins_medium"
            android:text="Editar Perfil"
            android:textColor="@color/white"
            android:textSize="17sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_alignParentEnd="true"
            android:layout_marginTop="13dp"
            android:fontFamily="@font/poppins_bold"
            android:text="SALVAR"

            android:textColor="@color/white"

            android:textSize="15sp" />

        <ImageView
            android:id="@+id/iv_circle_background"
            android:layout_below="@+id/tv_profile_user"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:src="@drawable/profile_circle_blue"
            android:layout_margin="10dp"

            android:layout_centerHorizontal="true" />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_baseline_photo_camera_24"

            android:layout_alignEnd="@+id/iv_circle_background"
            android:layout_alignBottom="@+id/iv_circle_background"
            />

    </RelativeLayout>

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_head_profile" >

        <RelativeLayout
            android:id="@+id/rl_view_base_profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp">

            <RelativeLayout
                android:id="@+id/rl_update_info_profile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp">

                <TextView
                    android:id="@+id/tv_info_profile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/input_underline"
                    android:fontFamily="@font/poppins_bold"
                    android:text="INFORMAÇÕES DE DADOS PESSOAIS"

                    android:textColor="@color/black"
                    android:backgroundTint="#F6F6F6"

                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/tv_view_name_client"
                    android:layout_below="@+id/tv_info_profile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:fontFamily="@font/poppins_bold"
                    android:text="Nome:"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/et_edit_name_client"
                    android:layout_width="369dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_view_name_client"
                    android:background="@drawable/input_underline"

                    android:backgroundTint="#F6F6F6"

                    android:hint="Gabriel Augusto Reis"
                    android:textColor="@color/black"
                    android:textSize="19sp" />

                <TextView
                    android:id="@+id/tv_view_birth_date_client"
                    android:layout_below="@+id/et_edit_name_client"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_marginTop="20dp"

                    android:fontFamily="@font/poppins_bold"
                    android:text="Data de Nascimento:"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/et_edit_birth_date_client"
                    android:layout_width="369dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_view_birth_date_client"
                    android:background="@drawable/input_underline"

                    android:hint="26/06/2002"

                    android:backgroundTint="#F6F6F6"
                    android:textColor="@color/black"
                    android:textSize="19sp" />

                <TextView
                    android:id="@+id/tv_view_cpf_client"
                    android:layout_below="@+id/et_edit_birth_date_client"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_marginTop="20dp"

                    android:fontFamily="@font/poppins_bold"
                    android:text="CPF:"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/et_edit_cpf_client"
                    android:layout_width="369dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_view_cpf_client"
                    android:background="@drawable/input_underline"

                    android:hint="360.878.965-87"

                    android:backgroundTint="#F6F6F6"
                    android:textColor="@color/black"
                    android:textSize="19sp" />

                <TextView
                    android:id="@+id/tv_view_phone_client"
                    android:layout_below="@+id/et_edit_cpf_client"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_marginTop="20dp"

                    android:fontFamily="@font/poppins_bold"
                    android:text="Telefone Pessoal:"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/et_edit_phone_client"
                    android:layout_width="369dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_view_phone_client"
                    android:background="@drawable/input_underline"

                    android:hint="11 99999-9999"

                    android:backgroundTint="#F6F6F6"
                    android:textColor="@color/black"
                    android:textSize="19sp" />

                <TextView
                    android:id="@+id/tv_view_email_client"
                    android:layout_below="@+id/et_edit_phone_client"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_marginTop="20dp"

                    android:fontFamily="@font/poppins_bold"
                    android:text="E-mail Pessoal:"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/et_edit_email_client"
                    android:layout_width="369dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_view_email_client"
                    android:background="@drawable/input_underline"

                    android:backgroundTint="#F6F6F6"

                    android:hint="gabriel.reis@gmail.com.br"
                    android:textColor="@color/black"
                    android:textSize="19sp" />

            </RelativeLayout>

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>