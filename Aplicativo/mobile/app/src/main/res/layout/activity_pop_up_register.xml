<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="#F6F6F6"
    tools:context=".RegisterClutchServicesActivity">

    <RelativeLayout
        android:id="@+id/rl_screen_register_Clutch_service"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <View
            android:id="@+id/vw_band_black"
            android:layout_width="125dp"
            android:layout_height="182.14dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:background="@drawable/band_layout"
            android:backgroundTint="@color/black" />

        <View
            android:id="@+id/vw_band_blue"
            android:layout_width="65dp"
            android:layout_height="96.14dp"
            android:background="@drawable/band_layout"
            android:backgroundTint="@color/blue"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            tools:ignore="MissingConstraints" />

        <ImageView
            android:id="@+id/img_icon_ems"
            android:layout_width="350dp"
            android:layout_height="120dp"
            android:src="@drawable/icon_ems_black"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp" />

        <TextView
            android:id="@+id/tv_title_register_Clutch_services"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="Serviços de Embreagem"
            android:textSize="30sp"
            android:textAlignment="center"
            android:textColor="#000"
            android:fontFamily="@font/poppins_regular"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/img_icon_ems"
            android:layout_marginTop="20dp" />

        <LinearLayout
            android:id="@+id/box_register_Clutch_services"
            android:layout_width="350dp"
            android:layout_height="350dp"
            android:layout_below="@+id/tv_title_register_Clutch_services"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:background="@drawable/border_box"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:layout_width="260dp"
                    android:layout_height="260dp"
                    android:layout_alignParentStart="true">

                    <CheckBox
                        android:id="@+id/cb_Clutch_maintenance"

                        android:layout_width="180dp"
                        android:layout_height="37dp"

                        android:text="Manutenção da Embreagem"
                        android:textSize="15dp" />

                    <CheckBox
                        android:id="@+id/cb_Clutch_swapping_discs"
                        android:layout_below="@id/cb_Clutch_maintenance"

                        android:layout_width="180dp"
                        android:layout_height="30dp"

                        android:text="Troca de Discos"
                        android:textSize="15dp" />

                    <CheckBox
                        android:id="@+id/cb_Clutch_plateau_shift"
                        android:layout_below="@id/cb_Clutch_swapping_discs"

                        android:layout_width="180dp"
                        android:layout_height="30dp"

                        android:text="Troca de Platô"
                        android:textSize="15dp" />

                    <CheckBox
                        android:id="@+id/cb_Clutch_bearing"
                        android:layout_width="180dp"

                        android:layout_height="37dp"
                        android:layout_below="@id/cb_Clutch_plateau_shift"

                        android:text="Rolamento de Embreagem"
                        android:textSize="15dp" />

                    <CheckBox
                        android:id="@+id/cb_Clutch_wiring_check"
                        android:layout_below="@id/cb_Clutch_bearing"

                        android:layout_width="250dp"
                        android:layout_height="37dp"

                        android:text="Verificação e Manutenção de Cabeamento"
                        android:textSize="15dp" />

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="10dp"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentBottom="true">

                    <View
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_marginHorizontal="3dp"
                        android:background="@drawable/circle_activity_register_screens"
                        android:backgroundTint="@color/black" />

                    <View
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_marginHorizontal="3dp"
                        android:background="@drawable/circle_activity_register_screens"
                        android:backgroundTint="@color/black" />

                    <View
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_marginHorizontal="3dp"
                        android:background="@drawable/circle_activity_register_screens"
                        android:backgroundTint="@color/black" />

                    <View
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_marginHorizontal="3dp"
                        android:background="@drawable/circle_activity_register_screens"
                        android:backgroundTint="@color/black" />

                    <View
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_marginHorizontal="3dp"
                        android:background="@drawable/circle_activity_register_screens"
                        android:backgroundTint="@color/black" />

                    <View
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_marginHorizontal="3dp"
                        android:background="@drawable/circle_activity_register_screens"
                        android:backgroundTint="@color/black" />

                    <View
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_marginHorizontal="3dp"
                        android:background="@drawable/circle_activity_register_screens"
                        android:backgroundTint="@color/black" />

                    <View
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_marginHorizontal="3dp"
                        android:background="@drawable/circle_activity_register_screens"
                        android:backgroundTint="@color/black" />

                    <View
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_marginHorizontal="3dp"
                        android:background="@drawable/circle_activity_register_screens"
                        android:backgroundTint="@color/blue" />

                </LinearLayout>

            </RelativeLayout>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="300dp"
            android:layout_height="80dp"
            android:layout_centerInParent="true"
            android:layout_below="@+id/box_register_Clutch_services">

            <Button
                android:id="@+id/bt_back_register_info_clutch"
                android:layout_width="120dp"
                android:layout_height="60dp"
                android:layout_alignParentLeft="true"
                android:fontFamily="@font/poppins_medium"
                android:backgroundTint="@color/black"
                android:text="@string/txt_back_button"
                android:textColor="@color/white"
                android:layout_centerVertical="true"/>

            <Button
                android:id="@+id/btFinishRegisterClutch"
                android:layout_width="120dp"
                android:layout_height="60dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:backgroundTint="@color/limon_green"
                android:fontFamily="@font/poppins_medium"
                android:onClick="showPopUpTerms"
                android:text="@string/txt_conclude_button"
                android:textColor="@color/black" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_conainer_popup_terms"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:background="#D7000000">

            <TextView
                android:layout_width="280dp"
                android:layout_height="wrap_content"

                android:text="@string/txt_msg_registering_ems"
                android:textColor="@color/white"
                android:textSize="25sp"
                android:fontFamily="@font/poppins_medium"

                android:textAlignment="center"
                android:layout_centerHorizontal="true"

                android:layout_marginTop="40dp" >

            </TextView>

            <RelativeLayout
                android:id="@+id/ly_box_popup"
                android:layout_width="350dp"
                android:layout_height="360dp"
                android:layout_centerInParent="true"
                android:background="@drawable/border_box">

                <TextView
                    android:id="@+id/tv_notifications"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"

                    android:layout_marginBottom="15dp"
                    android:text="@string/txt_send_notifications"

                    android:textColor="@color/black"
                    android:textSize="23sp">

                </TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_notifications"

                    android:layout_marginTop="15dp"
                    android:text="@string/txt_terms_acess"

                    android:textColor="@color/black"
                    android:textSize="23sp">

                </TextView>

                <RelativeLayout
                    android:layout_width="300dp"
                    android:layout_height="80dp"
                    android:layout_alignParentBottom="true">

                    <Button
                        android:id="@+id/bt_not_accept"
                        android:layout_width="120dp"
                        android:layout_height="60dp"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:backgroundTint="@color/blue"
                        android:fontFamily="@font/poppins_medium"
                        android:onClick="gonePopUpTerms"
                        android:text="Não"
                        android:textColor="@color/white" />

                    <Button
                        android:id="@+id/bt_yes_accept"
                        android:layout_width="120dp"
                        android:layout_height="60dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:backgroundTint="@color/blue"
                        android:fontFamily="@font/poppins_medium"
                        android:text="Sim"
                        android:textColor="@color/white" />

                </RelativeLayout>

            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>